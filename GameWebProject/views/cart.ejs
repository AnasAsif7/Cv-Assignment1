<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

    <link rel="stylesheet" href="/stylesheets/styles.css" />
</head>
<body>
    <%- include('navbar') %>
    <div class="container mt-5 cart-container">
        <h2 class="section2-heading2">Your Cart</h2>
        <% if (games.length > 0) { %>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Image</th>
                        <th scope="col">Game Name</th>
                        <th scope="col">Category</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Total</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% games.forEach(function(game, index) { %>
                        <tr class="cart-row">
                            <td><img src="<%= game.homePageImage %>" alt="<%= game.name %>" width="50" class="game-img"></td>
                            <td><%= game.name %></td>
                            <td><%= game.category %></td>
                            <td>$<%= game.newPrice %></td>
                            <td>
                                <form action="/update-cart/<%= game._id %>" method="post" class="d-inline">
                                    <input type="hidden" name="index" value="<%= index %>">
                                    <button type="submit" name="action" value="decrease" class="btn btn-sm  btn-quantity-decrease">-</button>
                                    <span><%= game.quantity %></span>
                                    <button type="submit" name="action" value="increase" class="btn btn-sm btn-quantity-increase">+</button>
                                </form>
                            </td>
                            <td>$<%= (game.newPrice * game.quantity).toFixed(2) %></td>
                            <td>
                                <form action="/remove-from-cart/<%= game._id %>" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
            <h3 class="btn-total-price">Total: $<%= total.toFixed(2) %></h3>
        <% } else { %>
            <p>Your cart is empty.</p>
        <% } %>
    </div>
    <script src="/javascripts/script.js"></script>
</body>
</html>