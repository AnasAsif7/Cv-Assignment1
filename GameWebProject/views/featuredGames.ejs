<% featuredGames.forEach(function(game) { %>
  <div class="col-10 col-sm-6 col-md-4 col-lg-3 col-xl-3 mb-4">
    <div class="card game-card">
      <div class="game-img-container">
        <a href="/game/<%= game._id %>">
          <img src="<%= game.homePageImage %>" class="card-img-top" alt="<%= game.name %>">
        </a>
      </div>
      <div class="game-details-container">
        <div class="game-details">
          <h5 class="game-title"><%= game.name %></h5>
          <p class="game-subtitle"><%= game.category %></p>
          <div class="game-discount">
            <span class="discount-tag"><%= game.discountPercentage %>%</span>
            <span class="original-price">$<%= game.newPrice %></span>
          </div>
        </div>
        <div class="buy-now-container">
          <form method="POST" action="/add-cart/<%= game._id %>">
            <button type="submit" class="btn btn-primary">Buy Now</button>
          </form>
        </div>
      </div>
    </div>
  </div>
<% }); %>