<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Customer Requests</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css"
    />
    <style>
      body {
        background-color: #052547 !important;
        color: #fff !important;
        font-family: Arial, sans-serif !important;
      }

      .container {
        background-color: #013369 !important;
        padding: 20px !important;
        border-radius: 10px !important;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.8) !important;
        transition: transform 0.3s ease !important;
        max-width: 1000px;
        margin: 0 auto;
      }

      h2 {
        color: #f2f2f2 !important;
        text-align: center !important;
        margin-bottom: 20px !important;
        transition: transform 0.3s ease !important;
      }

      h2:hover {
        transform: scale(1.05) !important;
      }

      .table-responsive {
        overflow-x: auto !important;
        -webkit-overflow-scrolling: touch !important;
      }

      .table {
        color: #fff !important;
        margin: 0 auto;
        width: 100%;
      }

      thead th {
        background-color: #03458c !important;
        color: #ffffff !important;
      }

      tbody tr {
        transition: transform 0.3s ease, box-shadow 0.3s ease !important;
      }

      tbody tr:hover {
        transform: scale(1.02) !important;
        box-shadow: 0 0 10px #ffcc00 !important;
      }

      .btn-primary {
        background-color: #ffcc00 !important;
        color: #000 !important;
        border: none !important;
        border-radius: 5px !important;
        transition: background-color 0.3s ease, transform 0.3s ease,
          box-shadow 0.3s ease !important;
      }

      .btn-primary:hover {
        background-color: #cea502 !important;
        transform: scale(1.05) !important;
        box-shadow: 0 0 10px #ffcc00 !important;
      }

      .btn-danger {
        transition: background-color 0.3s ease, transform 0.3s ease,
          box-shadow 0.3s ease !important;
      }

      .btn-danger:hover {
        background-color: #ff6666 !important;
        transform: scale(1.05) !important;
      }
    </style>
  </head>
  <body>
    <div class="container mt-5">
      <h2>Customer Requests</h2>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Email</th>
              <th>Subject</th>
              <th>Message</th>
              <th>Created At</th>
            </tr>
          </thead>
          <tbody>
            <% contacts.forEach(contact => { %>
            <tr>
              <td><%= contact.firstName %></td>
              <td><%= contact.lastName %></td>
              <td><%= contact.email %></td>
              <td><%= contact.subject %></td>
              <td><%= contact.message %></td>
              <td><%= new Date(contact.createdAt).toLocaleString() %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
